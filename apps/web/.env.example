VITE_API_BASE_URL=http://localhost:8000
VITE_ENABLE_MSW=true
VITE_DEV_USER_EMAIL=bruno@example.com
VITE_DEV_USER_PASSWORD=password

# Dev/E2E: habilita fallback via header `X-BB-Session`.
VITE_ALLOW_HEADER_SESSION_AUTH=false

# Guardrail (frontend): em build PROD, só liga o fallback se este ACK estiver true.
VITE_ALLOW_HEADER_SESSION_AUTH_ACK=false

# Afiliados (tracking + bridge em modo mock)
# - O tracking lê ?ref=... e persiste em localStorage (TTL fixo no código).
# - O bridge é usado APENAS em dev/test para registrar a venda no portal de afiliados
#   (via iframe em /bridge/record-sale).
VITE_ENABLE_AFFILIATE_BRIDGE=true
VITE_AFFILIATES_PORTAL_ORIGIN=http://localhost:5176
