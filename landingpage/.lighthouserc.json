{
  "ci": {
    "collect": {
      "startServerCommand": "pnpm preview --filter @babybook/landingpage",
      "url": ["http://localhost:5173/"],
      "numberOfRuns": 1
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "metrics:lcp": ["warn", { "maxNumericValue": 2500 }],
        "metrics:cls": ["warn", { "maxNumericValue": 0.1 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
